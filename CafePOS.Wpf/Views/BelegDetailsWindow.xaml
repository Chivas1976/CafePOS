<Window x:Class="CafePOS.Wpf.Views.BelegDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Beleg-Details"
        Height="420" Width="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <DockPanel Margin="12">

        <!-- Header: Datum + Summe -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Datum:" FontWeight="Bold" Margin="0,0,6,0"/>
            <TextBlock Text="{Binding Datum, StringFormat={}{0:dd.MM.yyyy HH:mm}}"/>

            <TextBlock Text="   |   " Margin="8,0"/>

            <TextBlock Text="Summe:" FontWeight="Bold" Margin="0,0,6,0"/>
            <TextBlock Text="{Binding Summe, StringFormat={}{0:F2} €}"/>
        </StackPanel>

        <!-- Tabela pozicija -->
        <DataGrid ItemsSource="{Binding Positionen}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  GridLinesVisibility="None"
                  AlternationCount="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Artikel" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Einzel (€)" Binding="{Binding Einzelpreis, StringFormat={}{0:F2}}" Width="110">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Menge" Binding="{Binding Menge}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Gesamt (€)" Binding="{Binding Gesamt, StringFormat={}{0:F2}}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Dugme za zatvaranje -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Schließen" Width="100" IsCancel="True" Click="Close_Click"/>
        </StackPanel>
    </DockPanel>
</Window>